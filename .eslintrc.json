{  "env": {    "browser": true,    "es6": true  },  "plugins": ["prettier", "svelte3"],  "extends": ["plugin:prettier/recommended"],  "parserOptions": {    "ecmaVersion": 2020,    "sourceType": "module"  },  "overrides": [    {      "files": ["*.svelte"],      "processor": "svelte3/svelte3"    }  ],  "rules": {    "spaced-comment": [      "error",      "always",      {        "markers": ["<!--"]      }    ],    "indent": [      "error",      2    ],    "linebreak-style": [      "error",      "unix"    ],    "quotes": [      "error",      "single"    ],    "semi": [      "error",      "always"    ],    "prettier/prettier": "error"  }}