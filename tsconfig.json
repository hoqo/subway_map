{
  "extends": "@tsconfig/svelte",
  "compilerOptions": {
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "types": ["svelte"],
    "noImplicitAny": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*",
    "dist/"
  ]
}